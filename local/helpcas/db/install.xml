<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/helpcas/db" VERSION="20161208" COMMENT="XMLDB file for Moodle local/helpcas"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_helpcas" COMMENT="default local_helpcas table that associates users with their preferences for linking. Here they can decide to never show links for any of their course or override all their courses help links.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_display" TYPE="binary" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_link" TYPE="char" LENGTH="512" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="user_id_key" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_helpcas_category" COMMENT="Contains a link to the local_helpcas table via the helpcas_id field. Stores their category display preference (0: do not show links for this category, 1: show links for this category) and their personal category link (if present, shows this for all of their courses within this category).">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="helpcas_id" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="category_id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="category_display" TYPE="int" LENGTH="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="category_link" TYPE="char" LENGTH="512" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="helpcas_id_key" TYPE="foreign" FIELDS="helpcas_id" REFTABLE="local_helpcas" REFFIELDS="id"/>
        <KEY NAME="category_id_key" TYPE="foreign" FIELDS="category_id" REFTABLE="course_categories" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_helpcas_courses" COMMENT="Contains a link to the local_helpcas table via the helpcas_id field. Stores their course display preference (0: do not show links for this course, 1: show links for this course) and their personal course link (if present, shows this link for this course instead of the category, category preference or default).">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="helpcas_id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_display" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="course_link" TYPE="char" LENGTH="512" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="helpcas_id_key" TYPE="foreign" FIELDS="helpcas_id" REFTABLE="local_helpcas" REFFIELDS="id"/>
        <KEY NAME="course_id_key" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>